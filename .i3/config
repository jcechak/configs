# nastavení zvuku
# XF86AudioRiseVolume
bindcode 123 exec "amixer -q -c 0 set Master 2dB+ unmute; amixer -q -c 0 set Headphone 2dB+ unmute; amixer -q -c 0 set Speaker 2dB+ unmute"
# XF86AudioLowerVolume
bindcode 122 exec "amixer -q -c 0 set Master 2dB- unmute; amixer -q -c 0 set Headphone 2dB- unmute; amixer -q -c 0 set Speaker 2dB- unmute"
# XF86AudioMute
bindcode 121 exec "amixer -q -c 0 set Master toggle; amixer -q -c 0 set Headphone toggle; amixer -q -c 0 set Speaker toggle"

